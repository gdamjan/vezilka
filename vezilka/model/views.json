[
{
  "_id":"_design/pages",
  "language": "javascript",
  "views": 
  { 
    "all": { "map": "function(doc) { if (doc.Type == 'page')  emit(doc._id, null) }"},
    "by_date": { "map": "function(doc) { if (doc.Type == 'page')  emit(doc.creation_time, null) }"},
    "by_slug": { "map": "function(doc) { if (doc.Type == 'page')  emit(doc.slug, null) }"},
    "by_type": { "map": "function(doc) { if (doc.Type == 'page')  emit(doc.content_type, null) }" }
  }
},

{
  "_id":"_design/comments",
  "language": "javascript",
  "views": 
  { 
    "all": { "map": "function(doc) { if (doc.Type == 'comment')  emit(null, null) }" },
    "by_date": { "map": "function(doc) { if (doc.Type == 'comment')  emit(doc.creation_time, null) }" },
    "by_parent": { "map": "function(doc) { if (doc.Type == 'comment')  emit(doc.parent, null) }" }
  }
},

{
  "_id":"_design/tags",
  "language": "javascript",
  "views":
  {
    "all": { 
       "map": "function(doc) { for(var i=0; i<doc.tags.length; i++) { emit(doc.tags[i], null) } }"
    },
    "weight": {
       "map": "function(doc) { for(var i=0; i<doc.tags.length; i++) { emit(doc.tags[i], null) } }",
       "reduce": "function(keys, values, combine) { if (combine) { return sum(values); } else { return values.length; } }"
    }
  }
}
]
